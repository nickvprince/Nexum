@model JobCreateViewModel

<div class="d-flex justify-content-center container-fluid rounded-5 overflow-hidden bg-nexum-dark bg-gradient py-5">
    <div class="text-nexum-light" style="width: 80%">
        <h2 class="">Create New Job</h2>
        <form id="jobForm" asp-controller="Job" asp-action="Create">
            <div>
                <input asp-for="JobCreateRequest.DeviceId" type="hidden" value="@Model.JobCreateRequest.DeviceId" />
            </div>
            <div class="form-group">
                <label asp-for="JobCreateRequest.Name">Name</label>
                <input asp-for="JobCreateRequest.Name" class="form-control form-control-nexum-dark text-nexum-light" placeholder="Weekly Backup">
                <span asp-validation-for="JobCreateRequest.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobCreateRequest.Settings.BackupServerId">NAS Server</label>
                <select asp-for="JobCreateRequest.Settings.BackupServerId" class="form-control form-control-nexum-dark" asp-items="@(new SelectList(Model.NASServers, "BackupServerId", "Name"))"></select>
                <span asp-validation-for="JobCreateRequest.Settings.BackupServerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobCreateRequest.Settings.Type">Type</label>
                <select asp-for="JobCreateRequest.Settings.Type" class="form-control form-control-nexum-dark" asp-items="Html.GetEnumSelectList<DeviceJobType>()" required></select>
                <span asp-validation-for="JobCreateRequest.Settings.Type" class="text-danger"></span>
            </div>
            <div class="form-group time-wrapper">
                <label asp-for="JobCreateRequest.Settings.StartTime">Start Time</label>
                <input asp-for="JobCreateRequest.Settings.StartTime" type="time" class="form-control form-control-nexum-dark" placeholder="10:30">
                <span asp-validation-for="JobCreateRequest.Settings.StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobCreateRequest.Settings.EndTime">End Time</label>
                <div class="time-wrapper">
                    <input asp-for="JobCreateRequest.Settings.EndTime" type="time" class="form-control form-control-nexum-dark" placeholder="20:45">
                </div>
                <span asp-validation-for="JobCreateRequest.Settings.EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Schedule</label>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="JobCreateRequest.Settings.Schedule.Sunday" />
                    <label class="form-check-label" asp-for="JobCreateRequest.Settings.Schedule.Sunday">Sunday</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="JobCreateRequest.Settings.Schedule.Monday" />
                    <label class="form-check-label" asp-for="JobCreateRequest.Settings.Schedule.Monday">Monday</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="JobCreateRequest.Settings.Schedule.Tuesday" />
                    <label class="form-check-label" asp-for="JobCreateRequest.Settings.Schedule.Tuesday">Tuesday</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="JobCreateRequest.Settings.Schedule.Wednesday" />
                    <label class="form-check-label" asp-for="JobCreateRequest.Settings.Schedule.Wednesday">Wednesday</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="JobCreateRequest.Settings.Schedule.Thursday" />
                    <label class="form-check-label" asp-for="JobCreateRequest.Settings.Schedule.Thursday">Thursday</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="JobCreateRequest.Settings.Schedule.Friday" />
                    <label class="form-check-label" asp-for="JobCreateRequest.Settings.Schedule.Friday">Friday</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="JobCreateRequest.Settings.Schedule.Saturday" />
                    <label class="form-check-label" asp-for="JobCreateRequest.Settings.Schedule.Saturday">Saturday</label>
                </div>
                <span asp-validation-for="JobCreateRequest.Settings.Schedule" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobCreateRequest.Settings.UpdateInterval">Update Interval (seconds)</label>
                <input asp-for="JobCreateRequest.Settings.UpdateInterval" type="number" class="form-control form-control-nexum-dark" placeholder="30" required>
                <span asp-validation-for="JobCreateRequest.Settings.UpdateInterval" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobCreateRequest.Settings.RetryCount">Retry Count</label>
                <input asp-for="JobCreateRequest.Settings.RetryCount" type="number" class="form-control form-control-nexum-dark" placeholder="4" required>
                <span asp-validation-for="JobCreateRequest.Settings.RetryCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobCreateRequest.Settings.Retention">Retention (days)</label>
                <input asp-for="JobCreateRequest.Settings.Retention" type="number" class="form-control form-control-nexum-dark" placeholder="14" required>
                <span asp-validation-for="JobCreateRequest.Settings.Retention" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobCreateRequest.Settings.Sampling">Sampling</label>
                <input asp-for="JobCreateRequest.Settings.Sampling" type="checkbox" class="form-check-input">
                <span asp-validation-for="JobCreateRequest.Settings.Sampling" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-success-nexum-dark mt-3 text-nexum-light bg-nexum-light" style="width:40%">Create</button>
            </div>
        </form>
    </div>
    <div class="d-flex justify-content-end align-items-start">
        <a id="jobCloseLink" class="nav-link rounded-1 d-flex align-items-center justify-content-center" role="button">
            <svg class="bi text-light" fill="currentColor" style="max-height: 25px; max-width: 25px;">
                <use xlink:href="#x"></use>
            </svg>
        </a>
    </div>
</div>