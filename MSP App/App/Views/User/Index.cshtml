@model UserViewModel

@{
    ViewData["Title"] = "Users";
}

<h1>List of Users</h1>

<a asp-action="Create">Create New</a>

<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>
                    <a asp-action="Edit">Edit</a> |
                    <a asp-action="Permissions">Permissions</a> |
                    <a asp-action="Groups">Groups</a> |
                    <a asp-action="Delete">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>