    <a class="nav-link text-center" asp-controller="Home" role="button" style="color:white;">
        <i class="bi bi-house-door d-flex justify-content-center"></i>
        <p class="m-0 dashboard-nav-text">Home</p>
    </a>
    <a class="nav-link text-center" asp-controller="Job" role="button" style="color:white;">
        <i class="bi bi-calendar-check d-flex justify-content-center"></i>
        <p class="m-0 dashboard-nav-text">Jobs</p>
    </a>
    <a class="nav-link text-center" asp-controller="Storage" role="button" style="color:white;">
        <i class="bi bi-server d-flex justify-content-center"></i>
        <p class="m-0 dashboard-nav-text">Storage</p>
    </a>
    <a class="nav-link text-center" asp-controller="Alert" role="button" style="color:white;">
        <i class="bi bi-exclamation-triangle d-flex justify-content-center"></i>
        <p class="m-0 dashboard-nav-text">Alerts</p>
