<nav id="topNav" class="navbar py-0 overflow-x-auto overflow-y-hidden flex-nowrap" style="height:56px;">
        <a id="nexumLogoLink" class="text-center" asp-controller="Home" asp-action="Index" role="button" style="color:white;">
            <img src="~/images/NexumLong.png" alt="Nexum Logo" style="height: 52px" />
        </a>
        @* <h4 class="text-nexum-light">@ViewData["Title"]</h4> *@

        <div class="d-flex justify-content-center align-items-center flex-nowrap my-2">
            <button id="navDownloadInstaller" class="btn btn-nexum-gear-dark p-0 d-flex ms-2">
                <svg class="bi text-nexum-light" width="52px" height="52px" fill="currentColor">
                    <use xlink:href="#download"></use>
                </svg>
            </button>
            <div class="dropdown">
            @if (User.Identity?.IsAuthenticated ?? true)
            {
                <button id="navDropdownMenuButton" class="btn btn-nexum-gear-dark no-dropdown-arrow p-0 d-flex" data-bs-toggle="dropdown">
                    <svg class="bi text-nexum-light" width="52px" height="52px" fill="currentColor">
                        <use xlink:href="#gear"></use>
                    </svg>
                </button>
                <ul id="navDropdownMenu" class="dropdown-menu dropdown-menu-end" style="display: none; position: fixed; top: 5vh; right: 2vw; z-index: 1100;">
                    <li><a class="dropdown-item text-nexum-light" aria-disabled="true"><b>@(User.Identity?.Name)</b></a></li>
                    <li><hr class="dropdown-divider bg-light"></li>
                    <li><a id="adminLink" class="dropdown-item text-nexum-light" asp-controller="Tenant" asp-action="Index">Admin Panel</a></li>
                    <li><a class="dropdown-item text-nexum-light" href="#">Settings</a></li>
                    <form method="post" asp-controller="Auth" asp-action="Logout">
                    <li><button class="dropdown-item text-nexum-light" type="submit">Logout</button></li>
                    </form>
                </ul>
            }
           </div>
       </div>
</nav>