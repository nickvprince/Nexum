@model AuthViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="container bg-dark-subtle">
    <div class="">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8 col-sm-10">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title text-center mb-4">@ViewData["Title"]</h2>
                        <form method="post">
                            <div class="form-group mb-1">
                                <span asp-validation-for="Username" class="text-danger"></span>
                                <div class="input-group">
                                    <input type="text" asp-for="Username" class="form-control" id="username" placeholder="Username" />
                                </div>
                            </div>
                            <div class="form-group mb-1">
                                <span asp-validation-for="Password" class="text-danger"></span>
                                <div class="input-group">
                                    <input type="password" asp-for="Password" class="form-control" id="password" placeholder="Password" />
                                </div>
                            </div>
                            <div class="form-group d-flex justify-content-center">
                                <button type="submit" class="btn btn-dark w-100">Login</button>
                            </div>
                            <div class="text-center mt-4">
                                <a href="#" class="text-muted">Forgot Username / Password?</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>