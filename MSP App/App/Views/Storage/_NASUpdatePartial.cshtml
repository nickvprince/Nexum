@model NASServerUpdateRequest

<div class="d-flex justify-content-center container-fluid rounded-5 overflow-hidden bg-nexum-dark bg-gradient py-5">
    <div class="text-nexum-light" style="width: 80%">
        <h2 class="">Update NAS Server</h2>
        <form id="nasForm" asp-controller="Storage" asp-action="UpdateNAS">
            <div>
                <input asp-for="Id" type="hidden" value="@Model.Id" />
            </div>
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" class="form-control form-control-nexum-dark" placeholder="Enter name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Path">Path</label>
                <input asp-for="Path" class="form-control form-control-nexum-dark" placeholder="Enter save location" />
                <span asp-validation-for="Path" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NASUsername">NAS Username</label>
                <input asp-for="NASUsername" class="form-control form-control-nexum-dark" placeholder="Enter NAS username" />
                <span asp-validation-for="NASUsername" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NASPassword">NAS Password</label>
                <input asp-for="NASPassword" class="form-control form-control-nexum-dark" placeholder="Enter NAS password" />
                <span asp-validation-for="NASPassword" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-success-nexum-dark mt-3 text-nexum-light bg-nexum-light" style="width:40%">Update</button>
            </div>
        </form>
    </div>
    <div class="d-flex justify-content-end align-items-start">
        <a id="nasCloseLink" class="nav-link rounded-1 d-flex align-items-center justify-content-center" role="button">
            <svg class="bi text-light" fill="currentColor" style="max-height: 25px; max-width: 25px;">
                <use xlink:href="#x"></use>
            </svg>
        </a>
    </div>
</div>