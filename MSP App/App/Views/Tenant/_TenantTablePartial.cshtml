@model ICollection<Tenant>?

<div class="table-responsive">
    <table class="table m-0 table-nexum-dark rounded-5 overflow-hidden">
        <thead>
            <tr class="text-center">
                <th class="border-0">
                    <div class="d-flex justify-content-center align-items-center">
                        <a id="tenantCreateLink" class="nav-link rounded-1 d-flex align-items-center justify-content-center" asp-controller="Tenant" asp-action="Create" role="button">
                            <svg class="bi text-success" fill="currentColor" style="max-height: 25px; max-width: 25px;">
                                <use xlink:href="#plus-circle"></use>
                            </svg>
                        </a>
                    </div>
                </th>
                <th class="border-0 text-nexum-light">Name</th>
                <th class="border-0 text-nexum-light">Representative</th>
                <th class="border-0 text-nexum-light">isActive</th>
                <th class="border-0 text-nexum-light">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model == null || Model.Count == 0)
            {
                <tr>
                    <td class="border-2 border-top-0 border-start-0 border-end-0 text-center text-nowrap text-nexum-light" colspan="12">No tenants found</td>
                </tr>
            }
            else
            {
                int i = 0;
                foreach (var tenant in Model.OrderBy(t => t.Name))
                {
                    i++;
                    <tr class="@(i % 2 == 0 ? "row-nexum-striped-odd" : "row-nexum-striped-even") text-center text-nowrap align-middle">
                        <td class="p-0 border-0" colspan="12">
                            <div id="tempDataMessageTenant@(tenant.Id)"></div>
                        </td>
                    </tr>
                    <tr class="@(i % 2 == 0 ? "row-nexum-striped-odd" : "row-nexum-striped-even") text-center text-nowrap align-middle" data-bs-toggle="collapse" data-bs-target="#detailsDevice@(tenant.Id)">
                        <td class="border-0 text-nexum-light">@i</td>
                        <td class="border-0 text-nexum-light">@tenant.Name</td>
                        <td class="border-0 text-nexum-light">@tenant.TenantInfo.Name</td>
                        <td class="border-0 text-nexum-light">@tenant.IsActive.ToString()</td>
                        <td class="border-0">
                            <div class="d-flex justify-content-center align-items-center">
                                <a class="nav-link rounded-1 d-flex align-items-center justify-content-center" role="button" data-bs-toggle="collapse" data-bs-target="#detailsDevice@(tenant.Id)">
                                    <svg class="bi text-nexum-light table-button-nexum" fill="currentColor">
                                        <use xlink:href="#pc-display-horizontal"></use>
                                    </svg>
                                </a>
                                <a class="nav-link rounded-1 d-flex align-items-center justify-content-center" role="button" data-bs-toggle="collapse" data-bs-target="#detailsKey@(tenant.Id)">
                                    <svg class="bi text-nexum-light table-button-nexum" fill="currentColor">
                                        <use xlink:href="#key"></use>
                                    </svg>
                                </a>
                                <a id="tenantEditLink@(tenant.Id)" class="nav-link rounded-1 d-flex align-items-center justify-content-center" asp-controller="Tenant" asp-action="Update" asp-route-id="@tenant.Id" role="button">
                                    <svg class="bi text-nexum-light table-button-nexum" fill="currentColor">
                                        <use xlink:href="#pencil-square"></use>
                                    </svg>
                                </a>
                                <form id="tenantDeletelink@(tenant.Id)" asp-controller="Tenant" asp-action="Delete" asp-route-id="@tenant.Id">
                                    <button type="submit" class="nav-link rounded-1 d-flex align-items-center justify-content-center btn btn-link p-0" style="border: none; background: none;">
                                        <svg class="bi text-danger table-button-nexum" fill="currentColor">
                                            <use xlink:href="#x-circle"></use>
                                        </svg>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    <tr class="@(i % 2 == 0 ? "row-nexum-striped-odd" : "row-nexum-striped-even") text-center text-nowrap align-middle">
                        <td class="p-0 border-0" colspan="12">
                            <div id="detailsDevice@(tenant.Id)" class="collapse">
                                <table class="table m-0 table-nexum-dark border-0">
                                    <thead>
                                        <tr class="text-center text-nowrap">
                                            <th class="border-0 text-nexum-light">#</th>
                                            <th class="border-0 text-nexum-light">Name</th>
                                            <th class="border-0 text-nexum-light">Type</th>
                                            <th class="border-0 text-nexum-light">Status</th>
                                            <th class="border-0 text-nexum-light">Is Verified</th>
                                            <th class="border-0 text-nexum-light">Is Active</th>
                                        </tr>
                                    </thead>
                                    <tbody class="border-2 border-top-0 border-start-0 border-end-0">
                                        @{
                                            int j = 0;
                                        }
                                        @if (tenant.Devices == null || tenant.Devices.Count == 0)
                                        {
                                            <tr>
                                                <td class="border-2 border-top-0 border-start-0 border-end-0 text-center text-nowrap text-nexum-light" colspan="12">No devices found</td>
                                            </tr>
                                        }
                                        else
                                        {
                                            @foreach (var device in tenant.Devices.OrderBy(d => d.DeviceInfo.Type).ThenBy(d => d.DeviceInfo.Name))
                                            {
                                                j++;
                                                <tr class="@(i % 2 == 0 ? "row-nexum-striped-odd" : "row-nexum-striped-even") text-center text-nowrap align-middle">
                                                    <td class="border-0 text-nexum-light">@j</td>
                                                    <td class="border-0 text-nexum-light">
                                                        <div class="rounded-1 d-flex align-items-center justify-content-start p-0" style="border: none; background: none;">
                                                            <span>@device.DeviceInfo?.Name</span>
                                                            <a class="nav-link rounded-1 d-flex align-items-center justify-content-center ms-2" role="button" data-bs-toggle="collapse" data-bs-target="#detailsDeviceExtra@(tenant.Id)">
                                                                <svg class="bi text-nexum-light table-button-nexum" fill="currentColor">
                                                                    <use xlink:href="#three-dots"></use>
                                                                </svg>
                                                            </a>
                                                        </div>
                                                    </td>
                                                    <td class="border-0 text-nexum-light">@EnumUtilities.AddSpacesToCapital(EnumUtilities.EnumToString((DeviceType)device.DeviceInfo?.Type))</td>
                                                    <td class="border-0 text-nexum-light">
                                                        @if (device != null && device.Status != null)
                                                        {
                                                            <div class="rounded-1 d-flex align-items-center justify-content-center p-0" style="border: none; background: none;">
                                                                @switch (device.Status)
                                                                {
                                                                    case DeviceStatus.Online:
                                                                        <svg class="bi text-success table-button-nexum" fill="currentColor">
                                                                            <use xlink:href="#circle-fill"></use>
                                                                        </svg>
                                                                        break;
                                                                    case DeviceStatus.RestoreInProgress:
                                                                    case DeviceStatus.BackupInProgress:
                                                                        <svg class="bi text-warning table-button-nexum" fill="currentColor">
                                                                            <use xlink:href="#circle-fill"></use>
                                                                        </svg>
                                                                        break;
                                                                    default:
                                                                        <svg class="bi text-danger table-button-nexum" fill="currentColor">
                                                                            <use xlink:href="#circle-fill"></use>
                                                                        </svg>
                                                                        break;
                                                                }
                                                                <b class="text-nexum-light ms-2"><span>@EnumUtilities.AddSpacesToCapital(EnumUtilities.EnumToString((DeviceStatus)device.Status))</span></b>
                                                            </div>
                                                        }
                                                    </td>
                                                    <td class="border-0 text-nexum-light">@(device.IsVerified ? "true" : "false")</td>
                                                    <td class="border-0 text-nexum-light">@(device.IsActive ? "true" : "false")</td>
                                                </tr>
                                                <tr class="@(i % 2 == 0 ? "row-nexum-striped-odd" : "row-nexum-striped-even") text-center text-nowrap align-middle">
                                                    <td class="p-0 border-0" colspan="12">
                                                        <div id="detailsDeviceExtra@(tenant.Id)" class="collapse">
                                                            <table class="table m-0 table-nexum-dark border-0">
                                                                <thead>
                                                                    <tr class="text-center text-nowrap">
                                                                        <th class="border-0 text-nexum-light">Nickname</th>
                                                                        <th class="border-0 text-nexum-light">UUID</th>
                                                                        <th class="border-0 text-nexum-light">IP Address</th>
                                                                        <th class="border-0 text-nexum-light">Port</th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody class="border-2 border-top-0 border-start-0 border-end-0">
                                                                    <tr class="@(i % 2 == 0 ? "row-nexum-striped-odd" : "row-nexum-striped-even") text-center text-nowrap align-middle">
                                                                        <td class="border-0 text-nexum-light">@(device.DeviceInfo?.Nickname ?? "N/A")</td>
                                                                        <td class="border-0 text-nexum-light">@device.DeviceInfo?.Uuid</td>
                                                                        <td class="border-0 text-nexum-light">@device.DeviceInfo?.IpAddress</td>
                                                                        <td class="border-0 text-nexum-light">@device.DeviceInfo?.Port</td>
                                                                    </tr>
                                                                </tbody>
                                                            </table>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </td>
                    </tr>
                    <tr class="@(i % 2 == 0 ? "row-nexum-striped-odd" : "row-nexum-striped-even") text-center text-nowrap align-middle">
                        <td class="p-0 border-0" colspan="12">
                            <div id="detailsKey@(tenant.Id)" class="collapse">
                                <table class="table m-0 table-nexum-dark border-0">
                                    <thead>
                                        <tr class="@(i % 2 == 0 ? "row-nexum-striped-odd" : "row-nexum-striped-even") text-center text-nowrap align-middle">
                                            <td colspan="12" class="border-0 text-nexum-light">
                                                <strong>API Key: </strong>@tenant.ApiKey
                                            </td>
                                        </tr>
                                        <tr class="text-center text-nowrap">
                                            <th class="border-0 text-nexum-light">Name</th>
                                            <th class="border-0 text-nexum-light">Phone</th>
                                            <th class="border-0 text-nexum-light">Email</th>
                                            <th class="border-0 text-nexum-light">Address</th>
                                            <th class="border-0 text-nexum-light">City</th>
                                            <th class="border-0 text-nexum-light">State</th>
                                            <th class="border-0 text-nexum-light">Zip</th>
                                            <th class="border-0 text-nexum-light">Country</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr class="@(i % 2 == 0 ? "row-nexum-striped-odd" : "row-nexum-striped-even") text-center text-nowrap align-middle">
                                            <td class="border-0 text-nexum-light">@tenant.TenantInfo.Name</td>
                                            <td class="border-0 text-nexum-light">@tenant.TenantInfo.Phone</td>
                                            <td class="border-0 text-nexum-light">@tenant.TenantInfo.Email</td>
                                            <td class="border-0 text-nexum-light">@tenant.TenantInfo.Address</td>
                                            <td class="border-0 text-nexum-light">@tenant.TenantInfo.City</td>
                                            <td class="border-0 text-nexum-light">@tenant.TenantInfo.State</td>
                                            <td class="border-0 text-nexum-light">@tenant.TenantInfo.Zip</td>
                                            <td class="border-0 text-nexum-light">@tenant.TenantInfo.Country</td>
                                        </tr>
                                        <tr class="@(i % 2 == 0 ? "row-nexum-striped-odd" : "row-nexum-striped-even") text-center text-nowrap align-middle">
                                            <td class="p-0 border-0" colspan="12">
                                                <div id="tempDataMessageKey@(tenant.Id)"></div>
                                                <div id="keyCreateContentBox@(tenant.Id)"></div>
                                                <table class="table m-0 table-nexum-dark border-0">
                                                    <thead>
                                                        <tr class="text-center text-nowrap">
                                                            <th class="border-0">
                                                                <div class="d-flex justify-content-center align-items-center">
                                                                    <a id="keyCreateLink@(tenant.Id)" class="nav-link rounded-1 d-flex align-items-center justify-content-center" asp-controller="Tenant" asp-action="AddKey" role="button">
                                                                        <svg class="bi text-success" fill="currentColor" style="max-height: 25px; max-width: 25px;">
                                                                            <use xlink:href="#plus-circle"></use>
                                                                        </svg>
                                                                    </a>
                                                                </div>
                                                            </th>
                                                            <th class="border-0 text-nexum-light">Value</th>
                                                            <th class="border-0 text-nexum-light">Type</th>
                                                            <th class="border-0 text-nexum-light">Is Active</th>
                                                            <th class="border-0 text-nexum-light">Actions</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody class="border-2 border-top-0 border-start-0 border-end-0">
                                                        @if (tenant.InstallationKeys == null || tenant.InstallationKeys.Where(k => !k.IsDeleted).Count() == 0)
                                                        {
                                                            <tr class="@(i % 2 == 0 ? "row-nexum-striped-odd" : "row-nexum-striped-even") text-center text-nowrap align-middle">
                                                                <td class="border-2 border-top-0 border-start-0 border-end-0 text-center text-nowrap text-nexum-light" colspan="12">No keys found</td>
                                                            </tr>
                                                        }
                                                        else
                                                        {
                                                            int k = 0;
                                                            foreach (var key in tenant.InstallationKeys.Where(k => !k.IsDeleted).OrderByDescending(k => k.Id))
                                                            {
                                                                k++;
                                                                <tr class="@(i % 2 == 0 ? "row-nexum-striped-odd" : "row-nexum-striped-even") text-center text-nowrap align-middle">
                                                                    <td class="border-0 text-nexum-light">@k</td>
                                                                    <td class="border-0 text-nexum-light">@key.Key</td>
                                                                    <td class="border-0 text-nexum-light">@key.Type</td>
                                                                    <td class="border-0 text-nexum-light">@key.IsActive.ToString()</td>
                                                                    <td class="border-0">
                                                                        <div class="d-flex justify-content-center align-items-center">
                                                                            <a id="keyEditLink@(key.Id)" class="nav-link rounded-1 d-flex align-items-center justify-content-center" asp-controller="Tenant" asp-action="EditKey" asp-route-id="@key.Id" role="button">
                                                                                <svg class="bi text-nexum-light table-button-nexum" fill="currentColor">
                                                                                    <use xlink:href="#pencil-square"></use>
                                                                                </svg>
                                                                            </a>
                                                                            <form id="keyDeletelink@(key.Id)" asp-controller="Tenant" asp-action="DeleteKey" asp-route-id="@key.Id">
                                                                                <button type="submit" class="nav-link rounded-1 d-flex align-items-center justify-content-center btn btn-link p-0" style="border: none; background: none;">
                                                                                    <svg class="bi text-danger table-button-nexum" fill="currentColor">
                                                                                        <use xlink:href="#x-circle"></use>
                                                                                    </svg>
                                                                                </button>
                                                                            </form>
                                                                        </div>
                                                                    </td>
                                                                </tr>
                                                            }
                                                        }
                                                    </tbody>
                                                </table>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>