@model TenantUpdateRequest

<div class="d-flex justify-content-center container-fluid rounded-5 overflow-hidden bg-nexum-dark bg-gradient">
    <div class="my-5 text-nexum-light" style="width: 80%">
        <h2 class="">@Model.Name</h2>
        <form id="tenantForm" asp-controller="Tenant" asp-action="Update" asp-route-id="@Model.Id">
            <div>
                <input asp-for="Id" type="hidden" value="@Model.Id" />
            </div>
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" class="form-control form-control-nexum-dark text-nexum-light" placeholder="Nexum Headquarters">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContactName">Contact Name</label>
                <input asp-for="ContactName" class="form-control form-control-nexum-dark" placeholder="John Doe">
                <span asp-validation-for="ContactName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContactEmail">Contact Email</label>
                <input asp-for="ContactEmail" class="form-control form-control-nexum-dark" placeholder="john.doe@example.com">
                <span asp-validation-for="ContactEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContactPhone">Contact Phone</label>
                <input asp-for="ContactPhone" class="form-control form-control-nexum-dark" placeholder="123-456-7890">
                <span asp-validation-for="ContactPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address">Address</label>
                <input asp-for="Address" class="form-control form-control-nexum-dark" placeholder="123 Main St">
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Country">Country</label>
                <select id="country" asp-for="Country" class="form-control form-control-nexum-dark" data-region-id="region">
                    <option value="">Select a country</option>
                </select>
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="State">State</label>
                <select id="region" asp-for="State" class="form-control form-control-nexum-dark">
                    <option value="">Select a province</option>
                </select>
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City">City</label>
                <input asp-for="City" class="form-control form-control-nexum-dark" placeholder="Waterloo">
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Zip">ZIP/Postal Code</label>
                <input asp-for="Zip" class="form-control form-control-nexum-dark" placeholder="A1B 3A4">
                <span asp-validation-for="Zip" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-success-nexum-dark mt-3 text-nexum-light bg-nexum-light" style="width:40%">Update</button>
            </div>
        </form>
    </div>
    <div class="d-flex justify-content-end align-items-start">
        <a id="tenantCloseLink" class="nav-link rounded-1 d-flex align-items-center justify-content-center" role="button">
            <svg class="bi text-light" fill="currentColor" style="max-height: 25px; max-width: 25px;">
                <use xlink:href="#x"></use>
            </svg>
        </a>
    </div>
</div>