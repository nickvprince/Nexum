@{
    ViewData["Title"] = "Summary";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}
<div id="parentContentBox" class="border text-center border-light text-white container-fluid p-0" style="flex: 1 1 auto;">
    <div class="border text-center border-light text-white container-fluid">
        <!-- First Row: 2 Cards -->
        <div class="row my-3">
            <div class="col-6 p-0">
                <div class="card bg-dark">
                    <div class="card-body text-nowrap p-0" style="min-width: 100%;">
                        <h5 class="card-title text-light">Card 1</h5>
                        <p class="card-text text-light">This is the first card.</p>
                    </div>
                </div>
            </div>
            <div class="col-6 p-0">
                <div class="card bg-dark">
                    <div class="card-body text-nowrap p-0" style="min-width: 100%;">
                        <h5 class="card-title text-light">Card 2</h5>
                        <p class="card-text text-light">This is the second card.</p>
                    </div>
                </div>
            </div>
        </div>
        <!-- Second Row: 3 Cards -->
        <div class="row mb-3">
            <div class="col-4 p-0">
                <div class="card bg-dark">
                    <div class="card-body text-nowrap p-0" style="min-width: 100%;">
                        <h5 class="card-title text-light">Card 3</h5>
                        <p class="card-text text-light">This is the third card.</p>
                    </div>
                </div>
            </div>
            <div class="col-4 p-0">
                <div class="card bg-dark">
                    <div class="card-body text-nowrap p-0" style="min-width: 100%;">
                        <h5 class="card-title text-light">Card 4</h5>
                        <p class="card-text text-light">This is the fourth card.</p>
                    </div>
                </div>
            </div>
            <div class="col-4 p-0">
                <div class="card bg-dark">
                    <div class="card-body text-nowrap p-0" style="min-width: 100%;">
                        <h5 class="card-title text-light">Card 5</h5>
                        <p class="card-text text-light">This is the fifth card.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <div id="alertContentBox" class="border text-center border-light text-white"></div>
</div>

@section Scripts {

    <script>
        $(document).ready(function () {
            $.ajax({
                url: '/Alert/Table',
                type: 'GET',
                success: function (result) {
                    $('#alertContentBox').html(result);
                },
                error: function (xhr, status, error) {
                    console.error('Error loading partial view:', error);
                }
            });
        });
    </script>
}

